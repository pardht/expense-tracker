<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowPengeluaranActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="50dp">

        <TextView
            android:id="@+id/show_jml_pengeluaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ini jumlah"/>
        <TextView
            android:id="@+id/show_desc_pengeluaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ini deskripsi"/>
        <TextView
            android:id="@+id/show_tgl_pengeluaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ini tanggal"/>
        <Button
            android:id="@+id/btn_form_pengeluaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="form pengeluaran"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>